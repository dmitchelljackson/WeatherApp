<?xml version="1.0" encoding="utf-8"?>
<com.example.danieljackson.weatherapp.ui.cities.CityCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:background="@color/primary_dark">

                    <ImageView
                        android:id="@+id/weather_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center" />

                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/card_city_name_line"
                        android:layout_width="match_parent"
                        android:layout_height="28sp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/primary_text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/card_description_line"
                        android:layout_width="match_parent"
                        android:layout_height="18sp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/card_temp_line"
                        android:layout_width="match_parent"
                        android:layout_height="36sp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/primary_text"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </com.facebook.shimmer.ShimmerFrameLayout>

</com.example.danieljackson.weatherapp.ui.cities.CityCardView>